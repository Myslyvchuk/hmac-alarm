<?xml version="1.0" encoding="UTF-8"?>
<included>
    <!-- STDOUT logger -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%gray(%d{HH:mm:ss.SSS}) %highlight(%-5level) [%thread] [%cyan(%logger{0}:%line)] - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</included>
